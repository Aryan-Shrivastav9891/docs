{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://zuplo.com/schemas/policies/acl-policy-inbound.json",
  "type": "object",
  "title": "Access Control List Inbound",
  "isPreview": true,
  "description": "The access control list inbound policy limits access to resources based on parameters of the request",
  "required": ["handler"],
  "properties": {
    "handler": {
      "type": "object",
      "default": {},
      "required": ["export", "module", "options"],
      "properties": {
        "export": {
          "const": "AClPolicyInbound",
          "description": "The name of the exported type"
        },
        "module": {
          "const": "$import(@zuplo/runtime)",
          "description": "The module containing the policy"
        },
        "options": {
          "type": "object",
          "description": "The options for this policy",
          "required": ["policies"],
          "properties": {
            "policies": {
              "type": "array",
              "default": [],
              "description": "The policies to enforce for the request",
              "items": {
                "type": "object",
                "description": "An access policy",
                "properties": {
                  "condition": {
                    "anyOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "definitions": {
                          "optionsFunction": {
                            "type": "object",
                            "required": ["export", "module"],
                            "properties": {
                              "export": {
                                "type": "string",
                                "default": "default",
                                "description": "Specifies the export to load your function, e.g. `default`, `myFunction`.",
                                "examples": ["default", "myFunction"]
                              },
                              "module": {
                                "type": "string",
                                "default": "$import(./modules/my-module)",
                                "description": "Specifies the module to load your function, in the format `$import(./modules/my-module)`",
                                "examples": ["$import(./modules/my-module)"]
                              }
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "examples": [
        {
          "_name": "basic",
          "export": "AClPolicyInbound",
          "module": "$import(@zuplo/runtime)",
          "options": {
            "testKey": "${user.sub}",
            "modifier": {
              "module": "$import(./modules/ab-test)",
              "export": "abTestModifier"
            }
          }
        }
      ]
    }
  }
}
